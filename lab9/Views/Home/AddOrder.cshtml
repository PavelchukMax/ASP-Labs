@model Order 

<form asp-action="PostOrder" method="post">
    <div class="form-group">
        <label asp-for="OrderName">Name</label>
        <input asp-for="OrderName" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="OrderPrice">Price ($)</label>
        <input asp-for="OrderPrice" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Amount</label>
        <input min="1" type="number" value="1" name="amount" class="form-control" required />
    </div>
    <button style="width:100%;margin-top: 15px" type="submit" class="btn btn-primary btn-block">Create Order</button>
</form>